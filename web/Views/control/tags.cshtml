@using Web.ViewModels
@using Web.App_GlobalResources
<li class="widget">
    <h4>TAGS</h4>
    <div class="tagcloud">
        @{
            if (Model != null)
            {
                for (int i = 0; i < Model.Count; i++)
                {
                    var link_action = Url.Action("products", "product") + "/0/" + Model[i].Link + "?tag=" + @Model[i].Tag;
                    <a href="@link_action" title="@Model[i].Tag">@Model[i].Tag</a>

                }
            }
        }
    </div>
</li>
