@using Web.ViewModels
<div class="thumbs">
    <div class="margin-top-0">
        <div class="container">
            <div class="row margin-top-10 centered">
                @for (int i = 0; i < Model.List2.Count; i++)
                {
                    var img_p = Model.List2[i].ImagePath;
                    if (!string.IsNullOrEmpty(img_p))
                    {
                        if (img_p != "0")
                        {
                            img_p = img_p.Replace("sc_small_", "sc_full_");
                        }
                        else
                        {
                            img_p = "/images/noimage.jpg";
                        }
                    }
                    var offset = "";
                    if (i == 0)
                    {
                        offset = "col-xs-offset-1";
                    }
                    else
                    {
                        offset = "";
                    }                    
                    <div class="col-sm-12 col-md-2 wow fadeInLeft @offset">
                        <div class="kt-banner block-banner-text margin-bottom-10" data-height="150" data-background="@img_p" data-positionleft="40px" data-verticalmiddle="middle">
                            <a href="@Model.List2[i].Link" data-slide-index="@i" class="bg-image">
                                <div class="content">
                                    <h3 class="title title_button_text">@Model.List2[i].Title</h3>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>



