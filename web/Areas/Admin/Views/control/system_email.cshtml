@using Web.ViewModels
@using Web.App_GlobalResources
@using Webdiyer.WebControls.Mvc
@model Web.Areas.Admin.ViewModels.Email_view
@using (Html.BeginForm(Model.Parent_action, Model.Parent_controller, FormMethod.Post, new { id = "change_email_form", enctype = "multipart/form-data" }))
{
    <div class="page-header position-relative">
        <h1>Cấu hình email  @*<small><i class="icon-double-angle-right"></i></small>*@
        </h1>
    </div>    
    <div class="row-fluid">
        <div class="span12">
            <div class="tabbable">
                <ul class="nav nav-tabs" id="myTab">
                    @Html.Raw(Model.Html_link_tab)
                </ul>
                <div class="tab-content">
                    <div class="tab-pane in active">
                        @{if (!string.IsNullOrEmpty(Model.Message))
                          { 
                            <div class="alert alert-warning">
                                <button type="button" class="close" data-dismiss="alert">
                                    <i class="icon-remove"></i>
                                </button>
                                <strong>@Model.Message</strong>
                                <br />
                            </div>
                          }
                        }
                        <div class="form-horizontal">
                            <div class="control-group">
                                <label class="control-label" for="form-field-1">Smtp Host</label>
                                <div class="controls">
                                    <input type="text" id="smtphost" name="smtphost" class="span6" value="@Model.SmtpHost" />
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="form-field-1">Smtp Port</label>
                                <div class="controls">
                                    <input type="text" id="smtpport" name="smtpport" class="span6" value="@Model.SmtpPort" />
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="form-field-1">Smtp User (Email gửi)</label>
                                <div class="controls">
                                    <input type="text" id="smtpuser" name="smtpuser" class="span6" value="@Model.SmtpUser" />
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="form-field-1">Smtp Pass</label>
                                <div class="controls">
                                    <input type="text" id="smtppass" name="smtppass" class="span6" value="@Model.SmtpPass" />
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="form-field-1">Email nhận</label>
                                <div class="controls">
                                    <input type="text" id="email" name="email" class="span6" value="@Model.Email" />
                                </div>
                            </div>
                            <input type="hidden" id="act" name="act" value="@Model.Act" />
                            <input type="hidden" id="ctrl" name="ctrl" value="@Model.Ctrl" />
                             <input type="hidden" id="type_act" name="type_act" value="@Model.Type_act" />
                            <input type="hidden" id="type" name="type" value="@Model.Type" />
                            <div class="form-actions">
                                <button class="btn btn-info" type="submit" id="save">
                                    <i class="icon-save bigger-110"></i>
                                    Cập nhật
                                </button>
                                &nbsp; &nbsp; &nbsp;
						        <button class="btn" type="reset">
                                    <i class="icon-undo bigger-110"></i>
                                    Reset
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}