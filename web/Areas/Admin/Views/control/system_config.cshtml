@using Web.ViewModels
@using Web.App_GlobalResources
@using Webdiyer.WebControls.Mvc
@model Web.Areas.Admin.ViewModels.System_config_view
@using (Html.BeginForm(Model.Parent_action, Model.Parent_controller, FormMethod.Post, new { id = "change_email_form", enctype = "multipart/form-data" }))
{
    <div class="page-header position-relative">
        <h1>Cấu hình chung  @*<small><i class="icon-double-angle-right"></i></small>*@
        </h1>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="tabbable">
                <ul class="nav nav-tabs" id="myTab">
                    @Html.Raw(Model.Html_link_tab)
                </ul>
                <div class="tab-content">
                    <div class="tab-pane in active">
                        @{if (!string.IsNullOrEmpty(Model.Message))
                          {
                            <div class="alert alert-warning">
                                <button type="button" class="close" data-dismiss="alert">
                                    <i class="icon-remove"></i>
                                </button>
                                <strong>@Model.Message</strong>
                                <br />
                            </div>
                          }
                        }
                        <div class="form-horizontal">
                            <div class="control-group" style="display:none">
                                <label class="control-label" for="form-field-1">Ngôn ngữ</label>
                                <div class="controls">
                                    @{ SelectList list_language = new SelectList(Model.List_language, "Value", "Text", Web.Models.LanguageModels.ActiveLanguage().LangCultureName);}
                                    @Html.DropDownListFor(m => m.Lang, list_language, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="form-field-1">Tên trang</label>
                                <div class="controls">
                                    <input type="text" id="Page_name" name="Page_name" class="span6" value="@Model.Page_name" />
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="form-field-1">Keyword</label>

                                <div class="controls">
                                    <textarea id="Keywords" name="Keywords" class="span6" rows="3">@Model.Keywords</textarea>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="form-field-1">Description</label>
                                <div class="controls">
                                    <textarea id="Description" name="Description" class="span6" rows="3">@Model.Description</textarea>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="form-field-1">Hotline</label>
                                <div class="controls">
                                    <input type="text" id="Hotline" name="Hotline" class="span6" value="@Model.Hotline" />
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="form-field-1">Địa chỉ</label>
                                <div class="controls">
                                    <textarea id="Address" name="Address" class="span6" rows="3">@Model.Address</textarea>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="form-field-1">Slogan</label>
                                <div class="controls">
                                    <textarea id="Slogan" name="Slogan" class="span6" rows="3">@Model.Slogan</textarea>
                                </div>
                            </div>
                            <div class="control-group" style="display:none">
                                <label class="control-label" for="form-field-1">Support</label>
                                <div class="controls">
                                    <textarea id="Support" name="Support" class="span6" rows="3">@Model.Support</textarea>
                                </div>
                            </div>

                            <div class="control-group" style="display:none">
                                <label class="control-label" for="form-field-1">Skyper</label>
                                <div class="controls">
                                    <textarea id="Skype" name="Skype" class="span6" rows="3">@Model.Skype</textarea>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="form-field-1">Fanpage Facebook</label>
                                <div class="controls">
                                    <textarea id="Facebook" name="Facebook" class="span6" rows="3">@Model.Facebook</textarea>
                                </div>
                            </div>
                            <div class="control-group" style="display:none">
                                <label class="control-label" for="form-field-1">Phí ship</label>
                                <div class="controls">
                                    <input type="text" id="Fees" name="Fees" class="span6" value="@Model.Fees" />
                                </div>
                            </div>
                            <div class="control-group" style="display:none">
                                <label class="control-label" for="form-field-1">Min Free</label>
                                <div class="controls">
                                    <input type="text" id="Min_fees" name="Min_fees" class="span6" value="@Model.Min_fees" />
                                </div>
                            </div>
                            <div class="control-group" style="display:none;">
                                <label class="control-label" for="form-field-1">Thuế</label>
                                <div class="controls">
                                    <input type="text" id="Tax" name="Tax" class="span6" value="@Model.Tax" />
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="form-field-1">Google analytics</label>
                                <div class="controls">
                                    <textarea id="Google_analysis" name="Google_analysis" class="span6" rows="6">@Model.Google_analysis</textarea>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="form-field-1">App extend one</label>
                                <div class="controls">
                                    <textarea id="App_extend_one" name="App_extend_one" class="span6" rows="6">@Model.App_extend_one</textarea>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="form-field-1">App extend two</label>
                                <div class="controls">
                                    <textarea id="App_extend_two" name="App_extend_two" class="span6" rows="6">@Model.App_extend_two</textarea>
                                </div>
                            </div>

                            <div class="control-group" style="display:none">
                                <label class="control-label" for="form-field-1">Latitude</label>
                                <div class="controls">
                                    <textarea id="Latitude" name="Latitude" class="span6" rows="3">@Model.Latitude</textarea>
                                </div>
                            </div>
                            <div class="control-group" style="display:none">
                                <label class="control-label" for="form-field-1">Longitude</label>
                                <div class="controls">
                                    <textarea id="Longitude" name="Longitude" class="span6" rows="3">@Model.Longitude</textarea>
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="form-field-1">Ảnh đại diện</label>

                                <div class="controls" style="width: 45%">
                                    @if (!string.IsNullOrEmpty(Model.Image_map) && Model.Image_map != "0")
                                    { 
                                        <img id="lbImg" name="lbImg" src="@Model.Image_map" style='width:200px;'/><br />
                                        <br />
                                    }
                                    <input type="file" id="file_img" name="file_img" class="type_file span6" />
                                </div>
                            </div>
                            <input type="hidden" id="act" name="act" value="@Model.Act" />
                            <input type="hidden" id="ctrl" name="ctrl" value="@Model.Ctrl" />
                            <input type="hidden" id="type_act" name="type_act" value="@Model.Type_act" />
                            <input type="hidden" id="imgmap" name="imgmap" value="@Model.Image_map" />
                            <input type="hidden" id="type" name="type" value="@Model.Type" />
                            <input type="hidden" id="Is_update" name="Is_update" />
                            <div class="form-actions">
                                <button class="btn btn-info" type="submit" onclick="SaveData()" id="save">
                                    <i class="icon-save bigger-110"></i>
                                    Cập nhật
                                </button>
                                &nbsp; &nbsp; &nbsp;
                                <button class="btn" type="reset">
                                    <i class="icon-undo bigger-110"></i>
                                    Reset
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script type="text/javascript">
            function SaveData() {
                $("#Is_update").val("1");
            }
    </script>
}